<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_height="match_parent">



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ĐĂNG KÍ TÀI KHOẢN"
        android:gravity="center"
        android:textSize="33dp"
        android:textColor="#F44336"
        android:textStyle="bold"/>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="UserName:"
            android:textSize="26dp"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/edt_username_dk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom"
            android:hint="Nhập tài khoản"
            android:textSize="25dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Full Name:"
            android:textSize="26dp"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/edt_hoten_dk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom"
            android:hint="Nhập họ tên"
            android:textSize="25dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PassWord:"
            android:textSize="26dp"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/edt_password_dk"
            android:layout_width="match_parent"
            android:inputType="textPassword"
            android:background="@drawable/custom"
            android:hint="Nhập mật khẩu"
            android:layout_height="wrap_content"
            android:textSize="25dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RepassWord:"
            android:textSize="26dp"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/edt_repassword_dk"
            android:layout_width="match_parent"
            android:inputType="textPassword"
            android:background="@drawable/custom"
            android:hint="Nhập lại mật khẩu"
            android:layout_height="wrap_content"
            android:textSize="25dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email:"
            android:textSize="26dp"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/edt_email_dk"
            android:layout_width="match_parent"
            android:background="@drawable/custom"
            android:hint="Nhập email"
            android:layout_height="wrap_content"
            android:textSize="25dp"/>



        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_signup_dk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SIGN UP"
            android:textSize="23dp"
            android:layout_marginTop="30dp"
            android:textColor="@color/white"
            android:background="#F44336"/>
        <TextView
            android:id="@+id/txt_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:text="@string/back"/>

    </LinearLayout>


</LinearLayout>