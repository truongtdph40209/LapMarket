<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_height="match_parent">



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ĐĂNG KÍ TÀI KHOẢN"
        android:gravity="center"
        android:textSize="23dp"
        android:padding="10dp"
        android:background="#E88364"
        android:textColor="@color/white"
        android:textStyle="bold"/>
    <LinearLayout
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="User: "
            android:textSize="15dp"/>
        <EditText
            android:id="@+id/edt_username_dk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập tài khoản"
            android:padding="10dp"
            android:background="#DAD6D6"
            android:textSize="15dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name:"
            android:textSize="15dp"/>
        <EditText
            android:id="@+id/edt_hoten_dk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập họ tên"
            android:padding="10dp"
            android:background="#DAD6D6"
            android:textSize="15dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pass: "
            android:textSize="15dp"/>
        <EditText
            android:id="@+id/edt_password_dk"
            android:layout_width="match_parent"
            android:inputType="textPassword"
            android:hint="Nhập mật khẩu"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="#DAD6D6"
            android:textSize="15dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirn pass:"
            android:textSize="15dp"/>
        <EditText
            android:id="@+id/edt_repassword_dk"
            android:layout_width="match_parent"
            android:inputType="textPassword"
            android:hint="Nhập lại mật khẩu"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="#DAD6D6"
            android:textSize="15dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email: "
            android:textSize="15dp"/>
        <EditText
            android:id="@+id/edt_email_dk"
            android:layout_width="match_parent"
            android:hint="Nhập email"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="#DAD6D6"
            android:textSize="15dp"/>



        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_signup_dk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SIGN UP"
            android:textSize="23dp"
            android:layout_marginTop="30dp"
            android:textColor="@color/white"
            android:background="#E88364"/>
        <TextView
            android:id="@+id/txt_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="13dp"
            android:layout_gravity="center"
            android:text="@string/back"/>

    </LinearLayout>


</LinearLayout>