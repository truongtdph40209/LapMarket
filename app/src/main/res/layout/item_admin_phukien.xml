<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:paddingVertical="10dp"
    android:layout_height="wrap_content">


    <LinearLayout
        android:background="@drawable/custom"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:padding="10dp"
        android:gravity="center"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="155dp"
            android:layout_height="100dp"
            android:scaleType="fitXY"
            android:src="@drawable/phukien_laptop"/>


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_tensp_phukien_ql"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên Sản Phẩm"

                android:textSize="14dp"/>
            <TextView
                android:id="@+id/txt_giasp_phukien_ql"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giá Sản Phẩm"
                android:textColor="#F44336"
                android:textSize="14dp"/>
            <TextView
                android:id="@+id/txt_xemthem_phukien_ql"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/xemthem"
                android:textSize="14dp"/>

        </LinearLayout>



        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_delete_phukien"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#F47F76"
            android:text="DELETE"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/white"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_update_phukien"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#03A9F4"
            android:text="UPDATE"
            android:textColor="@color/white"/>


    </LinearLayout>


</LinearLayout>