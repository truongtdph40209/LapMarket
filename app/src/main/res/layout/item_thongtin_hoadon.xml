<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <TextView
        android:id="@+id/txt_mahd_hd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:text="mã hoa đon"/>
    <TextView
        android:id="@+id/txt_hoten_hd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="họ tên"/>
    <TextView
        android:id="@+id/txt_tensp_hd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:text="ten sp"/>
    <TextView
        android:id="@+id/txt_soluong_hd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:text="so luong"/>
    <TextView
        android:id="@+id/txt_gia_hd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:textColor="#F44336"
        android:text="gia sp"/>
    <TextView
        android:id="@+id/txt_ngaymua_hd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:text="ngay mua"/>
    <TextView
        android:id="@+id/txt_trangthai_hd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:text="trang thái"/>

    </LinearLayout>


</androidx.cardview.widget.CardView>